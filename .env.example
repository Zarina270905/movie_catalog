# Секретный ключ Django (сгенерируйте новый!)
SECRET_KEY=django-insecure-сюда-вставить-сгенерированный-ключ
# Режим отладки (True для разработки, False для продакшена)
DEBUG=True
# Разрешенные хосты (через запятую)
ALLOWED_HOSTS=localhost,127.0.0.1

# БАЗА ДАННЫХ
# Движок БД (по умолчанию SQLite)
DB_ENGINE=django.db.backends.sqlite3
# Для SQLite:
DB_NAME=db.sqlite3

# ЯЗЫК И ВРЕМЯ
LANGUAGE_CODE=ru-ru
TIME_ZONE=Europe/Moscow

# EMAIL НАСТРОЙКИ
# Бэкенд для разработки (выводит в консоль)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# Для реальной отправки (пример для Gmail):
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@moviecatalog.com

# КАСТОМНЫЕ НАСТРОЙКИ ПРИЛОЖЕНИЯ
SITE_NAME=MovieCatalog
SITE_DOMAIN=localhost:8000
ADMIN_EMAIL=admin@moviecatalog.com

# Яндекс OAuth (для входа через Яндекс)
# Получите на https://oauth.yandex.ru/client/new
YANDEX_OAUTH2_KEY=ваш_клиентский_ID
YANDEX_OAUTH2_SECRET=ваш_секретный_ключ

# CSRF И БЕЗОПАСНОСТЬ
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ЛОГИРОВАНИЕ
LOG_LEVEL=INFO